@model IEnumerable<JVStoreFront.DATA.EF.Product>

@{
    ViewBag.Title = "Upcoming Video Game Products";
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

@*Trying to add a page where it only shows future titles that are not released yet.
    
