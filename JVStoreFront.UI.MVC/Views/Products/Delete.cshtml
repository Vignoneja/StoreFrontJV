@model JVStoreFront.DATA.EF.Product

@{
    ViewBag.Title = "Deleting : " + Model.ProductTitle;
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete @Model.ProductTitle?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="button primary" /> |
        <button class="button">
            @Html.ActionLink("Cancel", "Index")
        </button>
    </div>
}
